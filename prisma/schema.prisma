datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String    @id @default(cuid())
  wx_id          String?   
  ali_id         String?  
  openid         String?
  nickname       String?
  username       String    @unique @default(cuid())
  password       String?
  avatar         String?
  phone          String?   @unique
  backup_phone   String?
  enable_protect Boolean   @default(false)
  enable_sms     Boolean   @default(false)
  enable_wechat  Boolean   @default(false)
  sex            String?
  country        String?
  province       String?
  city           String?
  car_number     String?
  car_message    String?   @default("临时停靠，请多多关照")
  status         String?
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
}

model QRCode {
  id             String    @id  @default(cuid())
  url            String
  status         String
  type           String
  created_by     String
  updated_by     String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
}

model Notice {
  id             String    @id  @default(cuid())
  call_phone     String
  receive_phone  String
  type           String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
}
